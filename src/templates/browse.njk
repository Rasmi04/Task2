{% extends "src/templates/layout.njk" %}

{% set activePage = 'collections' %}
{% set darkNavbar = true %}

{% block title %}Collections | The Gilded Page{% endblock %}

{% block head %}
<style>
    :root {
        --soft-pink: #fce4ec;
        --rose-gold: #d4a373;
        --cream: #fffdfa;
        --deep-rose: #880e4f;
    }

    body {
        background-color: var(--cream);
        color: var(--deep-rose);
        font-family: 'Georgia', serif;
    }

    .navbar {
        background: var(--soft-pink) !important;
        border-bottom: 2px solid var(--rose-gold);
    }

    /* Morphing Liquid Blob Shape [cite: 65] */
    .blob-img {
        width: 400px;
        height: 400px;
        object-fit: cover;
        border: 5px solid var(--soft-pink);
        animation: morph 8s ease-in-out infinite;
    }

    @keyframes morph {

        0%,
        100% {
            border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
        }

        50% {
            border-radius: 30% 60% 70% 30% / 50% 60% 30% 60%;
        }
    }
</style>
{% endblock %}

